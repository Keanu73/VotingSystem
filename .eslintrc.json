{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "indent": [
          "error",
          2,
          {
            "SwitchCase": 1
          }
        ],
        "keyword-spacing": [
          "error", {
            "before": true,
            "after": true
          }
        ],
        "space-before-blocks": [
          "error", {
            "functions":"always",
            "keywords": "always",
            "classes": "always"
          }
        ],
        "space-before-function-paren": [
          "error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
          }
        ],
        "prefer-const": [
          "error", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
          }
        ],
        "semi": [
          "error",
          "never"
        ]
    }
}